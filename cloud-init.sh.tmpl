#!/bin/bash -x

if [[ $(whoami) == root ]]; then
    echo "Applying Network Fix: Detecting interface and ignoring MAC mismatch..."

    ETH_DEV=$(ip -o link show up | awk -F': ' '{print $2}' | grep -vE "^(lo|docker|veth|br|virbr)" | head -n 1)

    echo "Detected primary interface: $ETH_DEV"

    if [[ -z "$ETH_DEV" ]]; then
        echo "WARNING: Could not detect interface, falling back to enp3s0"
        ETH_DEV="enp3s0"
    fi

    cat <<EOF > /etc/netplan/99-force-dhcp.yaml
network:
  version: 2
  ethernets:
    $ETH_DEV:
      dhcp4: true
      dhcp6: false
      match:
        name: $ETH_DEV
      set-name: $ETH_DEV
EOF

    rm -f /etc/netplan/50-cloud-init.yaml

    chmod 600 /etc/netplan/99-force-dhcp.yaml
    netplan apply

    ip link set $ETH_DEV up

    echo "Waiting for DHCP on $ETH_DEV..."
    sleep 5
fi

if [[ $(whoami) == root ]]; then
        # temporary hack to disable coredump to prevent OOM
        systemctl mask systemd-coredump.socket
        systemctl daemon-reload
        systemctl stop systemd-coredump.socket

	echo "Respawning myself as non root"
	chmod 777 $0 # yay
        # use su instead of su to let new shell able to use ulimit
        exec su ubuntu -c "bash $0"
fi


# If the network is still not ready after MAX_WAIT seconds,
# force a reboot to retry the initialization process.
MAX_WAIT=120
WAITED=0
while ! ip route get 10.1.0.1 >/dev/null 2>&1; do
  echo "Waiting for network..."
  sleep 2
  WAITED=$((WAITED+2))
  if [ "$WAITED" -ge "$MAX_WAIT" ]; then
    echo "Network not ready after $MAX_WAIT seconds, rebooting..."
    sudo shutdown -h now
    exit 0
  fi
done


cloud_image_serial=$(cat /etc/cloud/build.info |grep serial|awk '{print $2}')
runner_image_version=$(cat /imagegeneration/imagedata.json|jq .[1].detail|grep -oP "Version: [\d\.]+"|awk '{print $2}')

dd_host="10.1.0.1"

function send_metrics() {
	metrics="github.actions.$1:$${2:-1}|$${3:-c}|#runner_group:${RUNNERGROUP},#runner_image_version:$runner_image_version,#cloud_image_serial:$cloud_image_serial"
	if [[ ! -z "$4" ]]; then metrics="$metrics,$4"; fi
	echo "Send metrics $metrics to $dd_host"
	echo -n "$metrics" > /dev/udp/$dd_host/8125
}

function send_logs() {
	entry="{\"runner_name\":\"${NAME}\",\"runner_group\":\"${RUNNERGROUP}\",\"runner_image_version\":\"$runner_image_version\",\"cloud_image_serial\":\"$cloud_image_serial\",\"$1\":\"$2\"}"
	echo "Send logs $entry to $dd_host"
	echo -n "$entry" > /dev/udp/$dd_host/10518

}

